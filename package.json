{
    "name": "vanellus",
    "description": "The frontend functionality of the Kiebitz appointment sheduling software",
    "version": "0.7.0",
    "license": "AGPL-3.0",
    "author": "KIProtect GmbH",
    "homepage": "https://github.com/kiebitz-oss/vanellus",
    "repository": {
        "type": "git",
        "url": "https://github.com/kiebitz-oss/vanellus.git"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "scripts": {
        "build": "tsup",
        "test": "jest --runInBand",
        "prettier": "prettier --write .",
        "lint": "eslint . --ext .ts",
        "typecheck": "tsc --noEmit",
        "documentation": "npx typedoc --out ./docs src",
        "clean": "rm -rf dist/*"
        
    },
    "dependencies": {
        "dayjs": "^1.10.7"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "eslint": "^8.4.1",
        "jest": "^27.4.7",
        "jest-environment-jsdom": "^27.4.6",
        "node-fetch": "^3.1.0",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.2",
        "tsup": "^5.11.10",
        "typescript": "^4.5.3"
    },
    "peerDependencies": {
        "buffer": "^6"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2020": true
        },
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ]
    },
    "tsup": {
        "entry": [
            "src/index.ts"
        ],
        "splitting": true,
        "sourcemap": true,
        "dts": true,
        "minify": true,
        "clean": true,
        "format": [
            "esm",
            "cjs"
        ]
    }
}
